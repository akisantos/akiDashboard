<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="aki_dashboard.TiktokDashboard" owl="1"> 
        <div id="content-wrapper" class="vh-100 d-flex flex-column overflow-auto">
            <!-- Main Content -->
            <div id="content">
                <!-- Begin Page Content -->
                <div class="container-fluid px-4 py-4">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-3">
                        <div class="card w-100">
                          <h1 class="h3 mb-0 text-gray-800 card-header">TIKTOK SALES PERFORMANCE DASHBOARD</h1>
                          <div class="card-body d-inline-flex p-2 justify-content-between align-items-center">
                            <div class='p-2'>

                                <p>Thông tin cửa hàng</p>
                                <p>
                                    <t t-esc="this.authorizedShop.tiktok_data.data.shops[0].name"/>
                                    - Thuộc vùng : <t t-esc="this.authorizedShop.tiktok_data.data.shops[0].region" />
                                </p>
                            </div>

                            <div class='p-2'>
                                <a href="https://www.reddit.com/media?url=https%3A%2F%2Fi.redd.it%2Fafl9x6bfqmg91.jpg" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm mx-2 card-header ">
                                    <i class="fa fa-cloud-download"></i> Xuất báo cáo</a>
                                
                                <a href="https://www.reddit.com/media?url=https%3A%2F%2Fi.redd.it%2Fafl9x6bfqmg91.jpg" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm mx-2 card-header ">
                                    <i class="fa fa-cloud-download"></i> Refresh Access Token</a>
                            </div>

                          </div>
                        </div>

                    </div>
                    <!-- Content Row -->

                    <div class="row">

                        <div class="col-xl-7 col-lg-7">
                            <div class="card shadow mb-4">
                                <div
                                    class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Tổng quan</h6>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <div class="row">
                                        <KpiCard name="'Doanh thu'" value="123" percentage="23"/>
                                        <KpiCard name="'Người mua'" value="123" percentage="123"/>
                                        <KpiCard name="'Đơn hàng'" value="123" percentage="20"/>
                                        <KpiCard name="'Khách truy cập'" value="123" percentage="0"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
            <!-- <p>Giải pháp được cung cấp bởi aki</p> -->
        </div>

    </t>
</templates>